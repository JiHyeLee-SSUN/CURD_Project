<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.board.mapper.userMapper">
    <insert id="createByUser">
		insert into tbl_user(uid, pw, name, gender, email)
		values (#{uid}, #{pw}, #{name}, #{gender}, #{email})
	</insert>
    <select id="readByUid" resultType="UserVO" parameterType="string">
		select *
		from tbl_user
		where uid = #{uid}
	</select>
    <select id="readByEmail" resultType="UserVO" parameterType="string">
		select *
		from tbl_user
		where email = #{email}
	</select>
    <update id="updateAuthKey" parameterType="string">
		update tbl_user
		set authkey = #{authkey}
		where email = #{email}
	</update>
</mapper>